install.packages("pacman") #es un paquete que llama a otros paquetes y si no están los instala
library("pacman") #esta función llama al paquete instalado
p_load("ggplot2",#graficar 
       "dplyr", #facilitar el manajeo de dastos
       "vroom") #llamar repositorios 
Datos_curva <-vroom(file="https://raw.githubusercontent.com/ManuelLaraMVZ/resultados_PCR_practica/refs/heads/main/Amplif_grupo1_17022025.csv")
head(Datos_curva) # solo para visualizar los primeros 6 datos 
Curva_1 <- Datos_curva %>% #solo funciona para datos Ctrl+Shift+m #el nuevo objeto va a tener una asignación a partir de la base de datos xx, y le hace siguiente
  select("Cycle", "B1")
Curva_1

Grafica_curva <- ggplot(Curva_1,
                        mapping = aes(x=Cycle, 
                                      y= B1))+ #Este es para agregarle algo más 
  geom_point()+
  geom_line(color= "red",
            size=.5)
Grafica_curva

Grafica_curva_2 <- Grafica_curva+
  labs(x="ciclos",
       y="Fluorescencia",
       title = "Creado por: Abril Nava",
       subtitle = "Gráfica B1", 
       caption = "Ejercicio 3")+
  theme_classic()

Grafica_curva_2

